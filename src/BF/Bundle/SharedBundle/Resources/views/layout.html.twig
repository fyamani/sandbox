{% extends '::base.html.twig' %}

{% block stylesheets %}
	<!-- bootstrap css -->
	<link href="{{ asset('bundles/bfshared/lib/bootstrap/css/bootswatch.css') }}" rel="stylesheet" />
	<link href="{{ asset('bundles/bfshared/lib/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" />
	<link href="{{ asset('bundles/bfshared/css/extend.css') }}" rel="stylesheet" />

	<!-- for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
{% endblock %}

{% block javascripts %}
	<!-- external api -->
	{# 		<script src="http://maps.google.com/maps/api/js?sensor=false&amp;libraries=places"></script>#}
	{# <script src="{{ asset('bundles/bfmainapplication//bp.yahooapis.com/2.4.21/browserplus-min.js') }}"></script>#}

	<!-- Base -->
	{% javascripts output='/js/compiled/app.js'
	    '@BFSharedBundle/Resources/public/lib/jquery/*.js'
	    '@BFSharedBundle/Resources/public/lib/bootstrap/js/bootstrap.js'
	    '@BFSharedBundle/Resources/public/js/tabhandler/*.js'
	%}
	    <script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block body %}
  {% include 'BFSharedBundle:Bootstrap/_partial:main-menu.html.twig' %}
    <div class="container">
    <header>
        <h1>{% block title %}{% endblock %}</h1>
    </header>
    <section id="content-area">
      <div class="row-fluid">
        <div class="span12">
          <!--Body content-->
          <div class="row-fluid">
              {% include 'BFSharedBundle:Bootstrap/_partial:dialogbox.html.twig' %}

              {% include 'BFSharedBundle:Bootstrap/_partial:message.html.twig' %}
          </div>
          {% block base_content %}{% endblock %}
        </div>
      </div>
      </section>
    </div>
  <footer id="footer">
  <div class="container" >
  {% include 'BFSharedBundle:Bootstrap/_partial:footer.html.twig' %}
  </div>
  </footer>
{% endblock %}