{% extends 'BFDemoBundle::layout.html.twig' %}

{% block title "Login" %}

{% block content %}
    <p class="muted">
        Choose between two default users: <em>user/userpass</em> <small>(ROLE_USER)</small> or <em>admin/adminpass</em> <small>(ROLE_ADMIN)</small>
    </p>

    {% if error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path("bf_security_check") }}" method="post" id="login" class="form-horizontal">

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">
            <span class="border-l">
                <span class="border-r">
                    <span class="btn-bg">Login</span>
                </span>
            </span>
        </button>
    </form>
{% endblock %}
